<%= form_for @post do |form|%>

<div class="form-group mt-4">
  <%= form.label :caption %> <br>
  <%= form.text_field :content, class: "form-control" %>
  <% @post.errors.full_messages_for(:content).each do |message| %>
      <div><%= message %></div>
      <% end %>
</div>

<div>
<%= form.submit %>
</div>
<%end%>
