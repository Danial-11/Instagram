<div class="d-flex flex-column align-items-center mt-3">
<div class="col-xl-7 col-lq-8 col-md-10 col-sm-11 post-card">
<div class="card">
<div class="card-header">
Create Post
</div>
<div class="card-body">
    <%= form_for @post, :html => {:multipart => true, :class => "dropzone upload-images p-0 border-0"} do |f| %>
    <%= f.label "Add caption", class: "control-label" %>
    <%= f.text_field :content, class: "text_field", required: true %>
    <%= file_field_tag "images[]", type: :file, multiple: true , required: true %>
    <%= f.submit "Post", class: "btn btn-default btn-outline-success" %>
    <% end %>
            </div>
        </div>
    </div>
</div>

<div class="d-flex flex-column align-items-center mt-3">
    <div class = "col-xl-7 col-lq-8 col-md-10 col-sm-11 post-card">
        <div class="card">
            <div class="card-header">
                <%= current_user.username %>
                <!-- Button trigger modal -->
                <button type="button" class="btn" style="float: right" data-toggle="modal" data-target="#exampleModal">
                <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
                </button>

                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                    </div>
                </div>
                </div>
                <hr>
                <% @userPosts.each do |post| %>
                <p><%= post.content %></p>
                <% post.photos.each do |photo| %>
                    <%= image_tag photo.image.url(:standard) %>
                    <hr>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>

</div>


