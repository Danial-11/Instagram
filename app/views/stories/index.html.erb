<div class="d-flex flex-column align-items-center mt-3">
<div class="col-xl-7 col-lq-8 col-md-10 col-sm-11 post-card">
<div class="card">
<div class="card-header">
Create story
</div>
<div class="card-body">
    <%= form_for @story, :html => {:multipart => true, :class => "dropzone upload-images p-0 border-0"} do |f| %>
    <%= f.label "Add caption", class: "control-label" %>
    <%= f.text_field :caption, class: "text_field", required: true %>
    <%= file_field_tag "images[]", type: :file, multiple: true , required: true %>
    <%= f.submit "Story", class: "btn btn-default btn-outline-success" %>
    <% end %>
            </div>
        </div>
        <% @userStories.each do |story| %>
    <%= current_user.username %>
    <hr>
    <p><%= story.caption %></p>
    <% story.story_images.each do |photo| %>
        <%= image_tag photo.image.url(:standard) %>
        <hr>
    <% end %>
<% end %>
    </div>
</div>
