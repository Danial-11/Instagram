<div id="follow-btn">
  <% if current_user.is_following?(user) %>
    <%= link_to user_unfollow_path(user.username), method: :delete,
                                                   remote: true do
    %>
      <button class="btn btn-success ml-4">Unfollow</button>
    <% end %>
  <% else %>
    <%= link_to user_follow_path(user.username), method: :post,
                                                 remote: true do
    %>
      <button class="btn btn-success ml-4">Follow</button>
    <% end %>
  <% end %>
</div>
