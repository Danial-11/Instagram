<div class="row justify-content-md-center">
    <div class="col-md-4 text-center">

    </div>
    <div class="col-md-8">
        <div class="row mt-5">
            <h1 class="username col-5 mt-2"><%= current_user.username %></h1>
            <button class="btn btn-success col-2 mx-1"><%= link_to 'Edit User', edit_user_path(current_user) %></button>
                <button class="btn btn-success col-1 dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="fa-solid fa-gear"></button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <%= link_to 'Logout', destroy_user_session_path, class: "dropdown-item" %>

                </div>
        </div>
        <div class="row mt-3">
            <h3 class="email"><%= current_user.email %></h3>
        </div>
        <%= link_to 'Create Post', posts_path, class: "btn btn-success" %>
        <%= link_to 'Add to story', stories_path, class: "btn btn-success" %>
    </div>
</div>

