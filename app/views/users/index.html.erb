<div class="row justify-content-md-center profile-wrapper">
    <div class="col-md-4 text-center">

    </div>
    <div class="col-md-8">
        <div class="row">
            <h1 class="username col-5 mt-2"><%= current_user.username %></h1>
            <button class="btn btn-success col-2 mx-1"><%= link_to 'Edit User', edit_user_path(current_user), class:"text-white" %></button>
                <button class="btn btn-success col-1 dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="fa-solid fa-gear"></button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Action</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <a class="dropdown-item" href="#">Something else here</a>
                </div>
        </div>
        <div class="row mt-3">
            <h3 class="email"><%= current_user.email %></h3>
        </div>
        <%= link_to 'Create Post', posts_path, class: "btn btn-success" %>
    </div>
    <div>
    </div>
</div>


<% @user_posts.each do |post| %>
<%= current_user.username %>
<hr>
<p><%= post.content %></p>
<% post.photos.each do |photo| %>
    <%= image_tag photo.image.url(:standard) %>
    <hr>
    <% end %>
<% end %>
