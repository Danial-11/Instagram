<div class="row justify-content-md-center profile-wrapper">
    <div class="col-md-4 text-center">
    <% if @usersearch.image.present? %>
      <%= image_tag @usersearch.image.url, class: "rounded-circle mt-4", width: "50%", height: "90%" %>
    <% else %>
      <%= image_tag 'gravatar-pic', class: "rounded-circle mt-4", width: "50%", height: "90%" %>
    <% end %>
    </div>
    <div class="col-md-8">
        <div class="row mt-5">
            <h1 class="username col-5 mt-2"><%= @usersearch.username %></h1>
                <button class="btn btn-success col-2" type="button">Follow</button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Action</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <a class="dropdown-item" href="#">Something else here</a>
                </div>
        </div>
        <div class="row mt-3">
            <h3 class="email"><%= @usersearch.email %></h3>
        </div>
    </div>
</div>
